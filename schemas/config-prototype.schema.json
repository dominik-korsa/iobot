{
  "type": "object",
  "additionalProperties": false,
  "required": ["input", "modelProgram"],
  "$defs": {
    "program": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["mode", "path"],
          "properties": {
            "mode": {
              "const": "g++"
            },
            "path": {
              "type": "string"
            },
            "compilerArgs": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["mode", "path"],
          "properties": {
            "mode": {
              "const": "python"
            },
            "path": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["mode", "command", "args"],
          "properties": {
            "mode": {
              "const": "command"
            },
            "command": {
              "type": "string"
            },
            "args": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      ]
    }
  },
  "properties": {
    "verifier": { "$ref": "#/$defs/program" },
    "input": {
      "anyOf": [
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "program"],
          "properties": {
            "type": {
              "const": "generator"
            },
            "program": { "$ref": "#/$defs/program" }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "path"],
          "properties": {
            "type": {
              "const": "files"
            },
            "path": {
              "type": "string"
            },
            "extensions": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^\\..+$"
              }
            }
          }
        }
      ]
    },
    "modelProgram": {
      "$ref": "#/$defs/program"
    }
  }
}
