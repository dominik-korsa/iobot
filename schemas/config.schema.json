{
  "type": "object",
  "additionalProperties": false,
  "required": ["input"],
  "$defs": {
    "program": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["mode", "path"],
          "properties": {
            "mode": {
              "const": "g++"
            },
            "path": {
              "type": "string"
            },
            "compilerArgs": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["mode", "path"],
          "properties": {
            "mode": {
              "const": "python"
            },
            "path": {
              "type": "string"
            }
          }
        },
        {
          "type": "object",
          "additionalProperties": false,
          "required": ["mode", "command", "args"],
          "properties": {
            "mode": {
              "const": "command"
            },
            "command": {
              "type": "string"
            },
            "args": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      ]
    },
    "filesInput": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "path"],
      "properties": {
        "type": {
          "const": "files"
        },
        "path": {
          "type": "string"
        },
        "extensions": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\..+$"
          }
        }
      }
    },
    "generatorInput": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "program"],
      "properties": {
        "type": {
          "const": "generator"
        },
        "program": { "$ref": "#/$defs/program" }
      }
    },
    "outputFiles": {
      "type": "object",
      "additionalProperties": false,
      "required": ["path"],
      "properties": {
        "path": {
          "type": "string"
        },
        "extensions": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^\\..+$"
          }
        }
      }
    }
  },
  "properties": {
    "verifier": { "$ref": "#/$defs/program" }
  },
  "anyOf": [
    {
      "properties": {
        "input": {
          "anyOf": [
            {
              "$ref": "#/$defs/generatorInput"
            },
            {
              "$ref": "#/$defs/filesInput"
            }
          ]
        },
        "modelProgram": {
          "$ref": "#/$defs/program"
        }
      },
      "anyOf": [
        {
          "required": ["modelProgram"]
        },
        {
          "required": ["verifier"]
        }
      ]
    },
    {
      "properties": {
        "input": {
          "$ref": "#/$defs/filesInput"
        },
        "outputFiles": {
          "$ref": "#/$defs/outputFiles"
        }
      },
      "anyOf": [
        {
          "required": ["outputFiles"]
        },
        {
          "required": ["verifier"]
        }
      ]
    }
  ]
}
